{% extends 'KidsSiteBundle::layout.html.twig' %}
{% block body %}
<div class="contact-wrapper">
    <div class="side-col">
            <h1><i>{{ entity.title }}</i></h1>
            <form action="{{ path('sendMail', {'translit':entity.translit}) }}" class="contact-message" method="post">
                    <fieldset>
                            <div class="title">Отправте сообщение</div>
                            <div class="row">
                                    <label class="text">Имя<em>*</em></label>
                                    <label class="input-holder">
                                        {{ form_widget(form.fio) }}
                                    </label>
                            </div>
                            <div class="row">
                                    <label class="text">Телефон</label>
                                    <label class="input-holder">
                                        {{ form_widget(form.telefon) }}
                                    </label>
                            </div>
                            <div class="row">
                                    <label class="text">Почта<em>*</em></label>
                                    <label class="input-holder">
                                        <span > {{ form_widget(form.email)  }}</span>
                                    </label>
                            </div>
                            <div class="row">
                                    <label class="text">Сообщение<em>*</em></label>
                                    <div class="textarea-holder">
                                        {{ form_widget(form.body, { 'attr' : { 'cols' : '30', 'rows' : '10' } })  }}
                                    </div>
                            </div>
                            <div class="btn-row">
                                    <span class="send">Send!<input type="submit" value="send" title="send" /></span>
                            </div>
                            {{ form_widget(form._token)  }}
                    </fieldset>
            </form>
    </div>
        {{ entity.content|raw() }}
